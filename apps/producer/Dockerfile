# Build the docker image with `npx nx docker-build producer`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t producer`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system producer && \
          adduser --system -G producer producer

COPY dist/apps/producer producer
RUN chown -R producer:producer .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix producer --omit=dev -f install

CMD [ "node", "producer" ]
